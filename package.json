{
  "name": "user-service",
  "version": "2.0.0",
  "description": "Provides services to manage users.",
  "main": "dist/server.js",
  "scripts": {
    "postinstall": "npx tsc",
    "dev": "tsc-watch --onSuccess \"node ./dist/server.js\"",
    "build-ts": "tsc",
    "lint": "tsc --noEmit && eslint \"**/src/**/*.{js,ts}\" --quiet --fix",
    "build": "npm run build-ts && npm run lint",
    "start": "pm2 start pm2.yaml",
    "stop": "pm2 stop pm2.yaml",
    "watch-test": "npm run test -- --watchAll",
    "test": "jest --forceExit --coverage --verbose"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/ashutoshahoo/user-service"
  },
  "author": "ashutoshsahoo",
  "license": "ISC",
  "dependencies": {
    "argon2-pass": "^1.0.2",
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "helmet": "^4.1.1",
    "jsonwebtoken": "^8.5.1",
    "maskdata": "^1.1.2",
    "moment": "^2.28.0",
    "moment-timezone": "^0.5.31",
    "mongoose": "^5.10.5",
    "pm2": "^4.4.1",
    "short-uuid": "^4.1.0",
    "swagger-ui-express": "^4.1.4",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/chai": "^4.2.12",
    "@types/dotenv": "^8.2.0",
    "@types/eslint": "^7.2.2",
    "@types/express": "^4.17.8",
    "@types/helmet": "0.0.48",
    "@types/jest": "^26.0.13",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/mocha": "^8.0.3",
    "@types/mongoose": "^5.7.36",
    "@types/node": "^14.10.1",
    "@types/supertest": "^2.0.10",
    "@types/winston": "^2.4.4",
    "@typescript-eslint/eslint-plugin": "^4.1.1",
    "@typescript-eslint/parser": "^4.1.1",
    "chai": "^4.2.0",
    "eslint": "^7.9.0",
    "jest": "^26.4.2",
    "mocha": "^8.1.3",
    "supertest": "^4.0.2",
    "ts-jest": "^26.3.0",
    "ts-node": "^9.0.0",
    "tsc-watch": "^4.2.9",
    "typescript": "^4.0.2"
  }
}
